{
  "portraitScale": 2.3,
  "portraitTranslation": [0.0, 1.1, 0.0],
  "profileScale": 1.0,
  "profileTranslation": [0.0, -0.5, 0.0],
  "animations": {
    "send_out": "q.bedrock_primary('rhest', 'battle_intro', q.curve('symmetrical'), q.exclude_labels('look'))",
    "recall": "q.bedrock_primary('rhest', 'battle_intro', q.curve('symmetrical_wide'), q.exclude_labels('look'))",
    "win": "q.bedrock_primary('rhest', 'win', q.curve('symmetrical_wide'))",
    "lose": "q.bedrock_primary('rhest', 'lose', q.curve('symmetrical_wide'))"
  },
  "poses": {
    "battle-standing": {
      "poseTypes": ["STAND", "WALK", "FLOAT", "SWIM", "PORTRAIT", "PROFILE"],
      "condition": "q.in_battle() == true",
      "animations": [
        "q.look('head')",
        "q.bedrock('rhest', 'idle')"
      ]
    },
    "standing": {
      "poseTypes": ["STAND", "WALK", "FLOAT", "SWIM", "PORTRAIT", "PROFILE"],
      "condition": "q.in_battle() == false",
      "animations": [
        "q.look('head')",
        "q.bedrock('rhest', 'idle')"
      ]
    }
  }
}